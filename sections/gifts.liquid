<section class="gift_section layout_padding-bottom">
  <div class="box">
    <div class="container-fluid">
      <div class="row">
        {% for block in section.blocks %}
          <div class="col-md-5">
            <div class="img_container">
              <div class="img-box">
                <img src="{{ block.settings.picture | image_url }}" alt="Some Image" width="100%">
              </div>
            </div>
          </div>
          <div class="col-md-7">
            <div class="detail-box">
              <div class="heading_container">
                <h2>
                  {{ block.settings.head_text }}
                </h2>
              </div>
              <p>
                {{ block.settings.body_text }}
              </p>
              <div class="btn-box">
                <a href="https://www.free-css.com/free-css-templates" class="btn1">Buy Now</a>
                <a href="https://www.free-css.com/free-css-templates" class="btn2">See More</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Gifts",
  "blocks": [
    {
      "name": "Details",
      "type": "text",
      "settings": [
        {
          "id": "head_text",
          "type": "text",
          "label": "Head Text"
        },
        {
          "id": "body_text",
          "type": "richtext",
          "label": "Body Text"
        },
        {
          "id": "picture",
          "type": "image_picker",
          "label": "Add Picture"
        }
      ],
      "limit": 1
    }
  ]
}
{% endschema %}
